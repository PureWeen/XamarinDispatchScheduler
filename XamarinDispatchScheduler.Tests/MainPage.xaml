<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinDispatchScheduler.Tests"
             x:Class="XamarinDispatchScheduler.Tests.MainPage">

    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Welcome to Xamarin.Forms!"
                x:Name="lblChangeMe"
                AutomationId="lblChangeMe"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label  
                x:Name="lblTimer"
                AutomationId="lblTimer"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button 
                x:Name="btnStop" 
                AutomationId="btnStop" 
                Text="Stop Timer"></Button>

            <Label  
                x:Name="lblSlowScheduler"
                AutomationId="lblSlowScheduler"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
